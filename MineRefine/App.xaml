<Application
    x:Class="MineRefine.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Mining Theme Resources -->
            <SolidColorBrush x:Key="MiningGoldBrush" Color="#FFD700"/>
            <SolidColorBrush x:Key="MiningDarkBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="MiningAccentBrush" Color="#FF8C00"/>

            <!-- Enhanced Typography -->
            <FontFamily x:Key="MiningFontFamily">Segoe UI, Calibri, Arial</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>