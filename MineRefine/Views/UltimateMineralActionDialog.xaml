<Window x:Class="MineRefine.Views.UltimateMineralActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FF1E1E1E"/>
        </Grid.Background>

        <ScrollViewer Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#FF2D2D30" Padding="15" CornerRadius="5" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ðŸ’Ž Ultimate Mineral Actions Center" FontSize="24" FontWeight="Bold" 
                                  Foreground="#FFE6E6E6" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LastUpdateText" Text="Last Updated: 2025-06-07 09:44:09" 
                                  FontSize="12" Foreground="#FFCCCCCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Player Info -->
                <Border Grid.Row="1" Background="#FF3C3C3C" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ‘¤ Player" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="PlayerNameText" Text="Valinor-70" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ’° Money" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="PlayerMoneyText" Text="Â£0" Foreground="#FF90EE90" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ðŸ“Š Level" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="PlayerLevelText" Text="1" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="ðŸ† Rank" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="PlayerRankText" Text="NOVICE MINER" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="ðŸ“¦ Inventory" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="InventoryCountText" Text="Total Minerals: 0" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Market Summary -->
                <Border Grid.Row="2" Background="#FF3C3C3C" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ“ˆ Market Sentiment" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="MarketSentimentText" Text="Neutral" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸŽª Active Events" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="ActiveEventsText" Text="0" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ðŸ“Š Total Volume" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="TotalVolumeText" Text="0" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="ðŸ“‰ Avg Change" FontWeight="Bold" Foreground="#FFE6E6E6" FontSize="12"/>
                            <TextBlock x:Name="AverageChangeText" Text="0.0%" Foreground="#FFCCCCCC" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Mineral Grid -->
                <Border Grid.Row="3" Background="#FF2D2D30" CornerRadius="5" Padding="5" MinHeight="400">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid x:Name="MineralGrid" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="RefreshButton" Content="ðŸ”„ Refresh Market" Padding="15,8" Margin="5"
                           Background="#FF0E7B0E" Foreground="White" BorderThickness="0" FontWeight="Bold"
                           Click="RefreshButton_Click"/>
                    <Button x:Name="ExportButton" Content="ðŸ“Š Export Report" Padding="15,8" Margin="5"
                           Background="#FF1E90FF" Foreground="White" BorderThickness="0" FontWeight="Bold"
                           Click="ExportButton_Click"/>
                    <Button x:Name="CloseButton" Content="âŒ Close" Padding="15,8" Margin="5"
                           Background="#FF8B0000" Foreground="White" BorderThickness="0" FontWeight="Bold"
                           Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>