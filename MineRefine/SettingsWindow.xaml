<Window x:Class="MineRefine.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FF1E1E1E"/>
        </Grid.Background>

        <!-- Main Content -->
        <ScrollViewer Padding="40">
            <Grid MaxWidth="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#FF2D2D30" Padding="30" CornerRadius="10" Margin="0,0,0,30">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="⛏️ MINE &amp; REFINE ULTIMATE" FontSize="32" FontWeight="Bold" 
                                  Foreground="#FFE6E6E6" HorizontalAlignment="Center"/>
                        <TextBlock Text="Configure Your Mining Adventure" FontSize="16" 
                                  Foreground="#FFCCCCCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock x:Name="SaveStatusTextBlock" Text="Checking for existing saves..." 
                                  FontSize="12" Foreground="#FF999999" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Game Actions -->
                <Border Grid.Row="1" Background="#FF3C3C3C" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🎮 Game Actions" FontSize="18" FontWeight="Bold" 
                                  Foreground="#FFE6E6E6" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" x:Name="NewGameButton" Content="🆕 New Game" 
                                   Padding="15,10" Margin="5" Background="#FF228B22" Foreground="White" 
                                   FontWeight="Bold" Click="NewGameButton_Click"/>
                            <Button Grid.Column="1" x:Name="LoadGameButton" Content="📁 Load Game" 
                                   Padding="15,10" Margin="5" Background="#FF1E90FF" Foreground="White" 
                                   FontWeight="Bold" Click="LoadGameButton_Click"/>
                            <Button Grid.Column="2" x:Name="StartGameButton" Content="🚀 Start Mining" 
                                   Padding="15,10" Margin="5" Background="#FFFF8C00" Foreground="White" 
                                   FontWeight="Bold" IsEnabled="False" Click="StartGameButton_Click"/>
                            <Button Grid.Column="3" x:Name="ExitButton" Content="❌ Exit" 
                                   Padding="15,10" Margin="5" Background="#FF8B0000" Foreground="White" 
                                   FontWeight="Bold" Click="ExitButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Player Creation Panel -->
                <Border Grid.Row="2" x:Name="PlayerCreationPanel" Background="#FF4A4A4A" 
                       CornerRadius="8" Padding="20" Margin="0,0,0,20" Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Player Info -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="👤 Player Setup" FontSize="16" FontWeight="Bold" 
                                      Foreground="#FFE6E6E6" Margin="0,0,0,15"/>

                            <TextBlock Text="Miner Name:" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <TextBox x:Name="PlayerNameTextBox" FontSize="14" Padding="10" 
                                    Background="#FF2D2D30" Foreground="#FFE6E6E6" 
                                    BorderBrush="#FFFF8C00" BorderThickness="2"
                                    PlaceholderText="Enter your miner name..."
                                    TextChanged="PlayerNameTextBox_TextChanged"/>

                            <TextBlock Text="Difficulty:" Foreground="#FFCCCCCC" Margin="0,15,0,5"/>
                            <ComboBox x:Name="DifficultyComboBox" FontSize="14" Padding="10" 
                                     Background="#FF2D2D30" Foreground="#FFE6E6E6" 
                                     BorderBrush="#FFFF8C00" BorderThickness="2"
                                     SelectionChanged="DifficultyComboBox_SelectionChanged">
                                <ComboBoxItem Content="🟢 Novice" Tag="NOVICE"/>
                                <ComboBoxItem Content="🟡 Experienced" Tag="EXPERIENCED" IsSelected="True"/>
                                <ComboBoxItem Content="🟠 Expert" Tag="EXPERT"/>
                                <ComboBoxItem Content="🔴 Legendary" Tag="LEGENDARY"/>
                            </ComboBox>

                            <Border Background="#FF2D2D30" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                                <TextBlock x:Name="DifficultyDescriptionTextBlock" 
                                          Text="Experienced mode: Balanced gameplay with moderate risks and rewards."
                                          FontSize="11" Foreground="#FFCCCCCC" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Avatar Selection -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="🎭 Avatar Style" FontSize="16" FontWeight="Bold" 
                                      Foreground="#FFE6E6E6" Margin="0,0,0,15"/>

                            <RadioButton x:Name="ClassicAvatarRadio" Content="👨‍🔧 Classic Miner" 
                                        Foreground="#FFCCCCCC" IsChecked="True" Margin="0,5"/>
                            <RadioButton x:Name="FemaleAvatarRadio" Content="👩‍🔧 Female Miner" 
                                        Foreground="#FFCCCCCC" Margin="0,5"/>
                            <RadioButton x:Name="ScientistAvatarRadio" Content="👨‍🔬 Quantum Scientist" 
                                        Foreground="#FFCCCCCC" Margin="0,5"/>
                            <RadioButton x:Name="CyberpunkAvatarRadio" Content="🤖 Cyberpunk Miner" 
                                        Foreground="#FFCCCCCC" Margin="0,5"/>
                            <RadioButton x:Name="QuantumAvatarRadio" Content="🌌 Quantum Explorer" 
                                        Foreground="#FFCCCCCC" Margin="0,5"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Audio Settings -->
                <Border Grid.Row="3" Background="#FF3C3C3C" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🔊 Audio Settings" FontSize="16" FontWeight="Bold" 
                                  Foreground="#FFE6E6E6" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Master Volume" 
                                      Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" x:Name="VolumeSlider" 
                                   Minimum="0" Maximum="100" Value="80"/>
                        </Grid>

                        <CheckBox x:Name="SoundEffectsCheckBox" Content="Sound Effects" 
                                 Foreground="#FFCCCCCC" IsChecked="True" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Visual Settings -->
                <Border Grid.Row="4" Background="#FF3C3C3C" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🎨 Visual Settings" FontSize="16" FontWeight="Bold" 
                                  Foreground="#FFE6E6E6" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Animation Speed" 
                                      Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" x:Name="AnimationSpeedComboBox" 
                                     Background="#FF2D2D30" Foreground="#FFE6E6E6" SelectedIndex="1">
                                <ComboBoxItem Content="Slow"/>
                                <ComboBoxItem Content="Normal"/>
                                <ComboBoxItem Content="Fast"/>
                                <ComboBoxItem Content="Ultra Fast"/>
                            </ComboBox>
                        </Grid>

                        <CheckBox x:Name="ReducedAnimationsCheckBox" Content="Reduced Animations" 
                                 Foreground="#FFCCCCCC" IsChecked="False" Margin="0,5"/>
                        <CheckBox x:Name="HighContrastCheckBox" Content="High Contrast Mode" 
                                 Foreground="#FFCCCCCC" IsChecked="False" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Loading Overlay -->
                <Border Grid.Row="5" x:Name="LoadingOverlay" Background="#99000000" 
                       CornerRadius="8" Padding="40" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressRing IsActive="True" Width="50" Height="50" Margin="0,0,0,20"/>
                        <TextBlock x:Name="LoadingTitle" Text="Loading..." FontSize="18" 
                                  FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LoadingMessage" Text="Please wait..." FontSize="12" 
                                  Foreground="#FFCCCCCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>